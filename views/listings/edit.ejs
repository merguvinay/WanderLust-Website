<% layout("/layouts/boilerplate") %>


    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit Form</h2>
    <form method="POST" action="/listings/<%=editList._id%>?_method=PUT" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title">Title</label>
            <input name="listing[title]" type="text" value="<%=editList.title%>" placeholder="Enter Title" class="form-control" required>
            <div class="invalid-feedback">Enter valid Title</div>
        </div>
        <div class="mb-3">
            <label for="description">Description</label>
            <textarea name="listing[description]" rows="3" cols="50"  placeholder="enter description" class="form-control" required><%=editList.description%></textarea>
            <div class="invalid-feedback">Enter short description</div>
        </div>
        <div class="mb-3">
            <label for="image">Image</label>
            <input name="listing[image]"  type="text" placeholder="<%=editList.image %>" class="form-control" >
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price">Price</label>
            <input name="listing[price]" type="number" value="<%=editList.price%>" placeholder="Enter Price" class="form-control" required>
            <div class="invalid-feedback">Enter Valid price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="location">Location</label>
            <input name="listing[location]" value="<%=editList.location%>" type="text" placeholder="Enter Location" class="form-control" required>
            <div class="invalid-feedback">Enter valid location</div>
        </div>
    </div>
        <div class="mb-3">
            <label for="country">Country</label>
            <input name="listing[country]" value="<%=editList.country%>" type="text" placeholder="Enter Country" class="form-control" required>
            <div class="invalid-feedback">Enter valid country name</div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">Submit</button>
    </form>
</div>
</div>

