<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3><%=reqData.title %></h3>
    </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%=reqData.image%>" class="card-img-top show-img" alt="List Image">
        <div class="card-body">
            
            <p class="card-text">
                <!-- <b class="card-title"><%=reqData.title %></b> -->
                <br>
                Description:<%=reqData.description %> <br>
                Price:<%=reqData.price.toLocaleString("en-IN")%> <br>
                Country:<%=reqData.country %> <br>
            </p>
        </div>
        </div>
        <div class="btns">
            <a href="/listings/<%=reqData._id%>/edit" class="btn btn-dark offset-3 edit-btn">Edit</a> 
            <form method="POST" action="/listings/<%=reqData._id%>?_method=DELETE"><button class="btn btn-dark  offset-4">Delete</button></form>
        </div>

        <div class="col-8 offset-3 mb-3">
            <hr>
            <h4>Leave a Review</h4>
            <form>
                <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" >
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" rows="4" cols="30" class="form-control"></textarea>
                </div>
                <button class="btn btn-outline-dark mt-3">Submit</button>
            </form>
        </div>
</div>



